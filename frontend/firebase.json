{
    "hosting": {
        "public": "public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "/**",
                "run": {
                    "serviceId": "typingym-api",
                    "region": "us-west1",
                    "pinTag": true
                }
            }
        ]
    },
    "emulators": {
        "hosting": {
            "port": 5002
        },
        "typingym-api": {
            "port": 5007
        },
        "ui": {
            "enabled": true
        },
        "singleProjectMode": true
    }
}
