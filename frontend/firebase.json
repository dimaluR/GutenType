{
  "hosting": {
    "source": "hosting",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-west1"
    },
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/**",
        "run": {
          "serviceId": "typingym-api",
          "region": "us-west1",
          "pinTag": true
        }
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5003
    },
    "typingym-api": {
      "port": 5007
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    }
  }
}
